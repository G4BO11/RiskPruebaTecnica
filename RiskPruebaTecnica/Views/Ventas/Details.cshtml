@model VentaDto
@{
    ViewData["Title"] = "Detalle de Venta";
}

<div class="row">
    <div class="col-md-12">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h2>Detalle de Venta</h2>
            <div>
                <a asp-action="Index" class="btn btn-secondary">Volver al Listado</a>
                <a asp-action="Create" class="btn btn-primary">Nueva Venta</a>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5>Informaci√≥n de la Venta</h5>
            </div>
            <div class="card-body">
                <table class="table table-borderless">
                    <tr>
                        <th width="40%">ID Venta:</th>
                        <td>@Model.Id</td>
                    </tr>
                    <tr>
                        <th>Fecha:</th>
                        <td>@Model.FechaVenta.ToString("dd/MM/yyyy HH:mm:ss")</td>
                    </tr>
                    <tr>
                        <th>Cliente:</th>
                        <td>@Model.ClienteNombre</td>
                    </tr>
                    <tr>
                        <th>Cajero:</th>
                        <td>@Model.UsuarioNombre</td>
                    </tr>
                    <tr class="table-success">
                        <th>Total:</th>
                        <td class="fw-bold fs-4">$@Model.Total.ToString("N0")</td>
                    </tr>
                </table>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5>Productos Vendidos</h5>
            </div>
            <div class="card-body">
                @if (Model.Detalles.Any())
                {
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>Producto</th>
                                <th>Cant.</th>
                                <th>Precio</th>
                                <th>Subtotal</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var detalle in Model.Detalles)
                            {
                                <tr>
                                    <td>@detalle.ProductoNombre</td>
                                    <td class="text-center">@detalle.Cantidad</td>
                                    <td class="text-end">$@detalle.PrecioUnitario.ToString("N0")</td>
                                    <td class="text-end">$@detalle.Subtotal.ToString("N0")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
            </div>
        </div>
    </div>
</div>