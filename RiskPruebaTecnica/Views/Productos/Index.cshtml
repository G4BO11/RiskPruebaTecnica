@model IEnumerable<ProductoDto>
@{
    ViewData["Title"] = "Productos";
}

<div class="row">
    <div class="col-md-12">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h2>Gesti贸n de Productos</h2>
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> Nuevo Producto
            </a>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h5>Inventario de Productos</h5>
            </div>
            <div class="card-body">
                @if (Model.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>C贸digo</th>
                                    <th>Nombre</th>
                                    <th>Precio Unitario</th>
                                    <th>Stock</th>
                                    <th>Estado Stock</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var producto in Model)
                                {
                                    <tr class="@(producto.UnidadesExistentes == 0 ? "table-danger" : producto.UnidadesExistentes < 10 ? "table-warning" : "")">
                                        <td><span class="badge bg-secondary">@producto.Codigo</span></td>
                                        <td>@producto.Nombre</td>
                                        <td class="text-end">$@producto.ValorUnitario.ToString("N0")</td>
                                        <td class="text-center">
                                            <span class="badge @(producto.UnidadesExistentes == 0 ? "bg-danger" : producto.UnidadesExistentes < 10 ? "bg-warning text-dark" : "bg-success")">
                                                @producto.UnidadesExistentes
                                            </span>
                                        </td>
                                        <td>
                                            @if (producto.UnidadesExistentes == 0)
                                            {
                                                <span class="text-danger fw-bold">Sin Stock</span>
                                            }
                                            else if (producto.UnidadesExistentes < 10)
                                            {
                                                <span class="text-warning fw-bold">Stock Bajo</span>
                                            }
                                            else
                                            {
                                                <span class="text-success">Disponible</span>
                                            }
                                        </td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a asp-action="Edit" asp-route-id="@producto.Id" class="btn btn-sm btn-outline-primary">
                                                    Editar
                                                </a>
                                                <button type="button" class="btn btn-sm btn-outline-danger" 
                                                        onclick="confirmarEliminar('@producto.Id', '@producto.Nombre')">
                                                    Eliminar
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr class="table-info">
                                    <th colspan="2">RESUMEN</th>
                                    <th class="text-end">Valor Total: $@Model.Sum(p => p.ValorUnitario * p.UnidadesExistentes).ToString("N0")</th>
                                    <th class="text-center">Total Items: @Model.Sum(p => p.UnidadesExistentes)</th>
                                    <th colspan="2">Productos: @Model.Count()</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                   
                    var sinStock = Model.Where(p => p.UnidadesExistentes == 0).ToList();
                    var bajoStock = Model.Where(p => p.UnidadesExistentes > 0 && p.UnidadesExistentes < 10).ToList();
                    

                    @if (sinStock.Any())
                    {
                        <div class="alert alert-danger mt-3">
                            <h6><strong>锔 Productos sin stock (@sinStock.Count()):</strong></h6>
                            <ul class="mb-0">
                                @foreach (var producto in sinStock)
                                {
                                    <li>@producto.Nombre (@producto.Codigo)</li>
                                }
                            </ul>
                        </div>
                    }

                    @if (bajoStock.Any())
                    {
                        <div class="alert alert-warning mt-3">
                            <h6><strong> Productos con bajo stock (@bajoStock.Count()):</strong></h6>
                            <ul class="mb-0">
                                @foreach (var producto in bajoStock)
                                {
                                    <li>@producto.Nombre (@producto.Codigo) - @producto.UnidadesExistentes unidades</li>
                                }
                            </ul>
                        </div>
                    }
                }
                else
                {
                    <div class="alert alert-info text-center">
                        <h4>No hay productos registrados</h4>
                        <p>Comience registrando su primer producto</p>
                        <a asp-action="Create" class="btn btn-primary">Registrar Primer Producto</a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modalEliminar" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirmar Eliminaci贸n</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>驴Est谩 seguro que desea eliminar el producto <strong id="nombreProductoEliminar"></strong>?</p>
                <div class="alert alert-warning">
                    <small>Esta acci贸n ocultar谩 el producto del sistema pero no eliminar谩 el historial de ventas.</small>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <form asp-action="Delete" method="post" style="display: inline;">
                    <input type="hidden" id="productoIdEliminar" name="id" />
                    <button type="submit" class="btn btn-danger">Eliminar</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmarEliminar(productoId, nombreProducto) {
            $('#productoIdEliminar').val(productoId);
            $('#nombreProductoEliminar').text(nombreProducto);
            $('#modalEliminar').modal('show');
        }
    </script>
}