<!-- Views/Productos/Edit.cshtml -->
@model ProductoDto
@{
    ViewData["Title"] = "Editar Producto";
}

<div class="row">
    <div class="col-md-12">
        <h2>Editar Producto</h2>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5>Información del Producto</h5>
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    <input asp-for="Id" type="hidden" />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Codigo" class="form-label">Código del Producto</label>
                                <input asp-for="Codigo" class="form-control" required />
                                <span asp-validation-for="Codigo" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="ValorUnitario" class="form-label">Precio Unitario</label>
                                <div class="input-group">
                                    <span class="input-group-text">$</span>
                                    <input asp-for="ValorUnitario" type="number" step="0.01" min="0"
                                        class="form-control" required />
                                </div>
                                <span asp-validation-for="ValorUnitario" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Nombre" class="form-label">Nombre del Producto</label>
                        <input asp-for="Nombre" class="form-control" required />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="UnidadesExistentes" class="form-label">Stock Actual</label>
                        <input asp-for="UnidadesExistentes" type="number" min="0" class="form-control" required />
                        <div class="form-text">Ajuste manual del inventario actual</div>
                        <span asp-validation-for="UnidadesExistentes" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <button type="submit" class="btn btn-primary">Actualizar Producto</button>
                        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Panel de información -->
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h6>ℹ️ Estado del Producto</h6>
            </div>
            <div class="card-body">
                <table class="table table-borderless table-sm">
                    <tr>
                        <td><strong>Stock Actual:</strong></td>
                        <td>
                            <span
                                class="badge @(Model.UnidadesExistentes == 0 ? "bg-danger" : Model.UnidadesExistentes < 10 ? "bg-warning text-dark" : "bg-success")">
                                @Model.UnidadesExistentes unidades
                            </span>
                        </td>
                    </tr>
                    <tr>
                        <td><strong>Valor Inventario:</strong></td>
                        <td>$@((Model.ValorUnitario * Model.UnidadesExistentes).ToString("N0"))</td>
                    </tr>
                </table>

                @if (Model.UnidadesExistentes == 0)
                {
                    <div class="alert alert-danger">
                        <small><strong>⚠️ Sin Stock:</strong> Este producto no aparecerá en las ventas.</small>
                    </div>
                }
                else if (Model.UnidadesExistentes < 10)
                {
                    <div class="alert alert-warning">
                        <small><strong>⚠️ Stock Bajo:</strong> Considere reabastecer este producto.</small>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}